<h1>  Arithmetic Operators  </h1>

<div class="container">

<?php
$a = 75;
$b = 50;

echo "<div class='operator'>
        <div class='title'>1️⃣ Addition (+)</div>
        <code>\$a + \$b</code> = 
        <span class='result'>" . ($a + $b) . "</span>
      </div>";

echo "<div class='operator'>
        <div class='title'>2️⃣ Subtraction (-)</div>
        <code>\$a - \$b</code> = 
        <span class='result'>" . ($a - $b) . "</span>
      </div>";

echo "<div class='operator'>
        <div class='title'>3️⃣ Multiplication (*)</div>
        <code>\$a * \$b</code> = 
        <span class='result'>" . ($a * $b) . "</span>
      </div>";

echo "<div class='operator'>
        <div class='title'>4️⃣ Division (/)</div>
        <code>\$a / \$b</code> = 
        <span class='result'>" . ($a / $b) . "</span>
      </div>";

echo "<div class='operator'>
        <div class='title'>5️⃣ Modulus (%)</div>
        <code>\$a % \$b</code> = 
        <span class='result'>" . ($a % $b) . "</span>
      </div>";

echo "<div class='operator'>
        <div class='title'>6️⃣ Exponentiation (**)</div>
        <code>\$a ** 2</code> = 
        <span class='result'>" . ($a ** 2) . "</span>
      </div>";
?>

</div>

